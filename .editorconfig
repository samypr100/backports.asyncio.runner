# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# editorconfig.org

root = true

[*]

# Sane defaults
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Python files
[*.py]
tab_width = 4
indent_size = 4
indent_style = space

# MD Files
[*.md]
ij_formatter_enabled = false
